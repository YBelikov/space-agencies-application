@model IEnumerable<SpaceAgenciesDatabaseApp.Crews>

@{
    ViewData["Title"] = "Crews";
}

<h1>Crews</h1>

<p>
    <a asp-action="Create">Create crew</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NumberOfMembers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mission)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfMembers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mission.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
