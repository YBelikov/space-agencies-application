@model IEnumerable<SpaceAgenciesDatabaseApp.AgenciesPrograms>

@{
    ViewData["Title"] = "Agencies and their programs";
}

<h1>Agencies and their programs</h1>

<p>
    <a asp-action="Create">Add program to agency</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpaceAgency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpaceProgram)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpaceAgency.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpaceProgram.Target)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
